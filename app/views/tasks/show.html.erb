<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed == true %>
  <p><%= check_box("tag", tag.id, {checked: @task.completed}) %>This task is completed</p>
<% else %>
  <p><%= check_box("tag", tag.id, {checked: @task.completed}) %>This task is not completed yet</p>
<% end %>

<%= link_to "Delete", task_path(@task),
method: :delete,
data: { confirm: "Are you sure?" } %></p>

<p><%= link_to "Back to all tasks", tasks_path %></p>
<p><%= link_to "Edit this task", task_edit_path(@task) %></p>
